{
  "manifest_version": 2,
  "name": "DeckTag",
  "version": "0.2",
  "short_name": "DTag",
  "description": "An extension that allows you to create a button to add tags to your tweets.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tweetdeck.twitter.com/"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "icons/remove.svg"
  ]
}